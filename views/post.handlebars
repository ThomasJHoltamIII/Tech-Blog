<div class="text-center">
  <h2>{{post.title}}</h2>
  <p>{{post.body}}</p>
  <p>Created by {{post.user.user_name}} on {{format_date post.date_created}}</p>
</div>
  {{#if comments.length}}
  <div class="col-md-6 post-list">
    <h3>Comments:</h3>

    {{#each comment as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{comment.id}}">{{comment.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" post-id="{{comment.id}}">DELETE</button>

      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
      {{#if logged_in}}
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Comment:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <input class="form-input" type="text" id="comment" name="comment" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>
      {{/if}}




<script src="./js/profile.js"></script>
