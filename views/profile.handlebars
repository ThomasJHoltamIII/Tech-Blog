<!-- Greeting section displaying the user's name -->
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user_name}}!</h2>
  </div>
</div>

<!-- Section for creating a new post -->
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>
    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Post Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-body">Body:</label>
        <textarea class="form-input" id="post-body" name="post-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <!-- Display current posts if any -->
  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>
    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <!-- Link to individual post -->
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <!-- Delete button for the post -->
        <button class="btn btn-sm btn-danger" post-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<!-- Link to the JavaScript file -->
<script src="./js/profile.js"></script>

